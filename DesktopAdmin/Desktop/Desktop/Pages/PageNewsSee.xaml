<Page x:Class="Desktop.Pages.PageNewsSee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageNewsSee">

    <ScrollViewer>
        <StackPanel>
            <TextBlock FontSize="27" Text="{Binding name}" Margin="10" FontWeight="SemiBold"></TextBlock>
            <Border CornerRadius="15" Margin="10" ClipToBounds="True" Height="400">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding image}" Stretch="Fill"/>
                </Border.Background>
            </Border>
            <TextBlock Text="{Binding description}" TextWrapping="Wrap" FontSize="15" Margin="10" LineHeight="22" Opacity="0.8"/>
        </StackPanel>
    </ScrollViewer>
</Page>
